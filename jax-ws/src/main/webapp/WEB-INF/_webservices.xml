<?xml version="1.0" encoding="UTF-8"?>

<!-- Alternative way to annotations -->

<webservices xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/javaee_web_services_1_3.xsd"
	version="1.3">

	<webservice-description>
		<webservice-description-name>WebServiceServiceName</webservice-description-name>
		<port-component>
			<port-component-name>WebServicePortName</port-component-name>
			<wsdl-service
				xmlns:pfx="http://target.namespace.com.tr">pfx:WebServiceServiceName
			</wsdl-service>
			<wsdl-port xmlns:pfx="http://target.namespace.com.tr">pfx:WebServicePortName
			</wsdl-port>
			<enable-mtom>false</enable-mtom>
			<service-impl-bean>
				<servlet-link>example.jaxws.JaxWs</servlet-link>
			</service-impl-bean>
		</port-component>
	</webservice-description>

</webservices>